{
    "name": "FaceZUCC",
    "version": "0.2",
    "description": "Turns all your facebook friends into Mark Zuckerberg, like in real life.",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "http://*/",
        "https://*/"],
    "background": {
      "scripts": ["background.js", "magicfunctions.js"],
      "persistent": true
    },
    "browser_action": {
	  "default_icon": "mark_icon.png",
	  "default_popup": "popup.html"
	},
    "content_security_policy": "script-src 'self' https://cdnjs.cloudflare.com; object-src 'self'",
    "manifest_version": 2
  }